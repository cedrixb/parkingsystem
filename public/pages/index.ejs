<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/fontawesome.min.css"
		integrity="sha512-xX2rYBFJSj86W54Fyv1de80DWBq7zYLn2z0I9bIhQG+rxIF6XVJUpdGnsNHWRa6AvP89vtFupEPDP8eZAtu9qA=="
		crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="styles/index.css">
</head>

<body>
	<!-- Navbar -->
	<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
		<ul class="navbar-nav">
			<li class="nav-item active">
				<a class="nav-link" href="/">Home</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="/parkingslotslist">Parking Slots List</a>
			</li>
		</ul>
	</nav>
	<!-- Navbar -->

	<div class="text-center">

		<div class="mask">
			<div class="d-flex justify-content-center align-items-center h-100">
				<div class="text-white mt-3">
					<h4 class="mb-3">Welcome to Cedrix Corp's Parking system!</h4>
				</div>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="main-container">
			<form class="row g-3" id="park-car-form">
				<h3 class="mb-2">Car park information form</h3>
				<div class="mb-2">
					<label for="exampleFormControlInput1" class="form-label">Plate number: </label>
					<input type="email" name="plateNumber" class="form-control" id="exampleFormControlInput1"
						placeholder="ex: AGT2385">
				</div>
				<div class="mb-2">
					<label for="exampleFormControlTextarea1" class="form-label">Car size </label>
					<select class="form-select" name="vehicleType" aria-label="Default select example">
					</select>
				</div>
				<div class="mb-2">
					<label for="exampleFormControlTextarea1" class="form-label">Entry point </label>
					<select class="form-select" name="entryPoint" aria-label="Default select example">
					</select>
				</div>
				<div class="col-12">
					<button type="button" class="btn btn-secondary" id="btnParkCar">Check Available Parking
						Slot</button>
				</div>
				<div class="mb-2">
					<label for="exampleFormControlInput1" class="form-label">Parking slot: </label>
					<input type="email" name="availableSlot" class="form-control" id="availableSlot" readonly>
				</div>
				<div class="col-12">
					<button type="button" class="btn btn-primary" id="btnSaveParkingInfo">Save</button>
				</div>
			</form>
		</div>
	</div>


	<!-- Scripts -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
		integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous">
		</script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
		integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
		crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<script type="text/javascript" src="/dist/js/parkingsystem.js"></script>
</body>

</html>